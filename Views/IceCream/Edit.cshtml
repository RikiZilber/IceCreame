@model crudTest.Models.Recommendation

@{
    ViewBag.Title = "Edit";
}


@Styles.Render("~/css/css")

<br>
<!-- contact -->
<div class="contact-main  w3layouts-section py-5">
    <div class="container py-xl-5 py-lg-3">
        <div class="title-heading text-center mb-sm-5 mb-4">
            <h3 class="title text-capitalize text-dark">Add Recommendation</h3>
            <p class="title-text font-weight-light font-italic mt-2">Tell us about your experience!</p>
        </div>
        <div class="inner_contact">
            <div class=" contact-leftgrid">
                <div class="wthree-contact-form">


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Recommendation</h4>
                        <hr />
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">*@
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Your Name", required = "", style = "border-color:black", pattern = "^[A-Za-z-' ]+" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-white" })
                        </div>



                        <div class="form-group">
                            @*@Html.LabelFor(model => model.Kosher, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">*@
                            @Html.EditorFor(model => model.ImageUrl, new { htmlAttributes = new { placeholder = "Image", required = "", style = "border-color:black" } })
                            @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-white" })
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(model => model.Tel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">*@
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { placeholder = "Your description", required = "", style = "border-color:black", pattern = "^[A-Za-z -:'.,]+" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-white"})
                        </div>


                        <div class="form-group">
                            @*@Html.LabelFor(model => model.ImageUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">*@
                            @Html.EditorFor(model => model.Rank, new { htmlAttributes = new { placeholder = "Your Rank", required = "", style = "border-color:black;background:none;color:white", pattern = "[1-5]{1}" } })
                            @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-white" })
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" style="background:#000000" />
                            </div>
                        </div>
                    </div>

                    }
                </div>
            </div>
            <div class="contact-right-grid">
                <div class="wthree-contact-form">
                    <div style="color:white;font-family:Pacifico;font-size:xx-large">
                        <br />
                        <br />
                        <br />
                        We would like to here from you about your experience so that we can go better and better.<br />
                        By your feedback we can offer you the best!!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@if (ViewBag.Error != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Error");
            };
    </script>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

